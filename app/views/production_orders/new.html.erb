				    <label>Prod Number</label>
				    <input type="text" name="pq-number" class="disabled field" placeholder="PQ Number">
				  </div>
				  <div class="field">
				    <label>Customer Name *</label>
				    <select class="ui dropdown">
						  <option value="">Choose PR</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Meal Time *</label>
				    <select class="ui dropdown">
						  <option value="">Choose One</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Production Date *</label>
				    <input type="text" name="" class="disablePast" data-date-format="dd MM yyyy"> 
				  </div>
			  </div>
			  <div class="seven wide column right floated">
			  	<div class="field">
				    <label>Requested By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Approved By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Notes</label>
				    <textarea rows="3"></textarea>
				  </div>
			  </div>
			  <div class="six wide column centered">
				  <a class="ui fluid blue button">
						  Auto Generate By Prodction Plan Date
					</a>	
				</div>
			</div>
		</div>
		<div class="ui segment">
			<table class="ui colapsing small table">
			  <thead>
			    <tr>
			      <th width="3%">No</th>
			      <th width="10%">MENU NAME</th>
			      <th width="10%">QTY</th>
			      <th width="10%">SERVING SIZE</th>
			      <th width="15%">CATEGORY</th>
			      <th width="10%">NOTES</th>
			      <th width="1%"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			    	<td>1</td>
			      <td>
				      <div class="field">
						    <select class="ui dropdown">
								  <option value="">Choose One</option>
								  <option value="1">Lorem Ipsum</option>
								  <option value="0">Lorem Ipsum</option>
								</select>
						  </div>
			      </td>
			      <td>
			      	<input type="text" name="" size="7">
			      </td>
			      <td>
			      	<input type="text" name="" size="7" placeholder="pax">
			      </td>
			      <td>
			      	<div class="field">
						    <select class="ui dropdown">
								  <option value="">Choose One</option>
								  <option value="1">Lorem Ipsum</option>
								  <option value="0">Lorem Ipsum</option>
								</select>
						  </div>
			      </td>
			      <td>
			      	<input type="text" name="" size="10">
			      </td>
			      <td> <i class="large remove icon"></i></td>
			    </tr>
			  </tbody>
		  </table>
		  <div class="ui grid stackable">
			  <div class="three wide column">
				  <div class="ui fluid blue vertical animated button" tabindex="4">
					  <div class="hidden content">Add Row</div>
					  <div class="visible content">
					   	<i class="plus icon"></i>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>