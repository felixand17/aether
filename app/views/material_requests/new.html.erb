						</select>
				  </div>
				  <div class="field">
				    <label>Approved By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Notes</label>
				    <textarea rows="3"></textarea>
				  </div>
			  </div>
			  <div class="six wide column centered">
				  <a class="ui fluid blue button">
						  Auto Generate By Production Order
					</a>	
				</div>
			</div>
		</div>
		<div class="ui segment">
			<table class="ui colapsing small table">
			  <thead>
			    <tr>
			      <th width="3%">No</th>
			      <th width="60%">ITEM NAME</th>
