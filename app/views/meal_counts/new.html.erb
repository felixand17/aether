<div id="purchase">
	<form class="ui form">
		<div class="ui segment">
			<div class="ui stackable two column grid">
			  <div class="seven wide column left floated">
			  	<div class="field">
				    <label>Meal Count No.</label>
				    <input type="text" name="pq-number" class="disabled field" placeholder="PQ Number">
				  </div>
				  <div class="field">
				    <label>Customer*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Customer</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Mealtime*</label>
				    <select class="ui dropdown">
						  <option value="">Choose One</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Meals Date *</label>
				    <input type="text" name="" class="datepicker-here" data-date-format="dd MM yyyy">
				  </div>
			  </div>
			  <div class="seven wide column right floated">
			  	<div class="field">
				    <label>Created By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Approved By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
			  </div>
			</div>
		</div>
		<div class="ui segment">
			<table class="ui colapsing small table">
			  <thead>
			    <tr>
			      <th width="3%">No</th>
			      <th width="60%">MEALS</th>
			      <th width="10%">QUANTITY</th>
			      <th width="15%">SERVING SIZE</th>
			      <th width="15%">NOTES</th>
			      <th width="1%"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			    	<td>1</td>
			      <td>
				      <div class="field">
						    <select class="ui fluid dropdown">
								  <option value="">Choose Sub Category</option>
								  <option value="1">Lorem Ipsum</option>
								  <option value="0">Lorem Ipsum</option>
								</select>
						  </div>
			      </td>
			      <td>
			      	<input type="text" name="" size="10">
			      </td>
			      <td>
			      	<div class="field">
			      		<input type="text" name="" size="10" placeholder="pax">
			      	</div>
			      </td>
			      <td>
			      	<div class="field">
			      		<input type="text" name="" size="10" placeholder="">
			      	</div>
			      </td>
			      <td> <i class="large remove icon"></i></td>
			    </tr>
			  </tbody>
		  </table>
		  <div class="ui grid stackable">
			  <div class="three wide column">
				  <div class="ui fluid blue vertical animated button" tabindex="4">
					  <div class="hidden content">Add Row</div>
					  <div class="visible content">
					   	<i class="plus icon"></i>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>