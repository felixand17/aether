<% content_for :title_page, "Standard Recipe" %>
<% content_for :breadcrumb, "Production" %>
<% content_for :page_menu do %>
  <%= render 'standard_recipes/shared/form_action_links' %>
<% end %>

<% content_for :side_menu do %>
  <%= render 'standard_recipes/shared/side_navigations' %>
<% end %>

<div id="purchase">
	<form class="ui form">
		<div class="ui segment">
			<div class="ui stackable two column grid">
			  <div class="seven wide column left floated">
			  	<div class="field">
				    <label>Recipe Code *</label>
				    <input type="text" name="pq-number" placeholder="PQ Number">
				  </div>
				  <div class="field">
				    <label>Menu Name *</label>
				    <input type="text" name="pq-number" placeholder="PQ Number">
				  </div>
			  </div>
			  <div class="seven wide column right floated">
				  <div class="field">
				    <label>Status*</label>
				    <select class="ui dropdown">
						  <option value="">Active</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Replicate From</label>
				    <select class="ui dropdown">
						  <option value="">choose Standard Recipe</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
			  </div>
			  <div class="six wide column centered">
				  <a class="ui fluid blue button">
						  Replicate Menu
					</a>	
				</div>
			</div>
		</div>
		<div class="ui segment">
			<div class="ui stackable two column grid">
			  <div class="seven wide column left floated">
			  	<div class="field">
				    <label>Qty Produced*</label>
				    <input type="text" name="travel-pass" placeholder="0.00">
				  </div>
				  <div class="field">
				    <label>Serving Size*</label>
				    <input type="text" name="travel-pass" placeholder="">
				  </div>
				  <div class="field">
				    <label>Preparation Time (minute)*</label>
				    <input type="text" name="travel-pass" placeholder="">
				  </div>
				  <div class="field">
				  	<label> Equipment</label>
				  	<textarea rows="3"></textarea>
				  </div>
			  </div>
			  <div class="seven wide column right floated">
					<div class="field">
				    <label>Temperatures</label>
				    <input type="text" name="travel-pass" placeholder="0.00">
				  </div>
				  <div class="field">
				    <label>Equipment Cost</label>
				   	<textarea rows="4"></textarea>
				  </div>
			  	<div class="field">
				    <label>Notes</label>
				    <textarea rows="4"></textarea>
				  </div>
				</div>
			</div>
		</div>
		<div class="ui segment">
			<div class="ui top attached tabular menu">
			  <a class="item active" data-tab="Receiving_Items">Ingredients</a>
			  <a class="item" data-tab="Rejected_Items">Sub Standard Recipe</a>
			</div>
			<div class="ui bottom attached tab segment active" data-tab="Receiving_Items">
			  <table class="ui colapsing small table">
				  <thead>
				    <tr>
				      <th width="3%">No</th>
				      <th width="30%">ITEM NAME</th>
				      <th width="5%">YIELD(%)</th>
				      <th width="5%">QTY</th>
				      <th width="5%">UNIT</th>
				      <th width="1%"></th>
				    </tr>
				  </thead>
				  <tbody>
				    <tr>
				    	<td>1</td>
				      <td>
							  <div class="field">
							    <select class="ui fluid dropdown">
									  <option value=""> </option>
									  <option value="1">Lorem Ipsum</option>
									  <option value="0">Lorem Ipsum</option>
									</select>
							  </div>
				      </td>
				      <td>
				      	<div class="field">
				      		<input type="text" name="" size="7" placeholder="100">
				      	</div>
				      </td>
				      <td>
				      	<div class="field">
				      		<input type="text" name="" size="7">
				      	</div>
				      </td>
				      <td>
				      	<div class="field">
				      		<input type="text" name="" size="7">
				      	</div>
				      </td>
				      <td><i class="trash icon"></i></td>
				    </tr>
				  </tbody>
			  </table>
			</div>
			<div class="ui bottom attached tab segment" data-tab="Rejected_Items">
			  <table class="ui colapsing small table">
				  <thead>
				    <tr>
				      <th width="3%">No</th>
				      <th width="30%">ITEM NAME</th>
				      <th width="5%">YIELD(%)</th>
				      <th width="5%">QTY</th>
				      <th width="5%">UNIT</th>
				      <th width="1%"></th>
				    </tr>
				  </thead>
				  <tbody>
				    <tr>
				    	<td>1</td>
				      <td>
							  <div class="field">
							    <select class="ui fluid dropdown">
									  <option value=""> </option>
									  <option value="1">Lorem Ipsum</option>
									  <option value="0">Lorem Ipsum</option>
									</select>
							  </div>
				      </td>
				      <td>
				      	<div class="field">
				      		<input type="text" name="" size="7" placeholder="100">
				      	</div>
				      </td>
				      <td>
				      	<div class="field">
				      		<input type="text" name="" size="7">
				      	</div>
				      </td>
				      <td>
				      	<div class="field">
				      		<input type="text" name="" size="7">
				      	</div>
				      </td>
				      <td><i class="large remove icon"></i></td>
				    </tr>
				  </tbody>
			  </table>
			</div>
		  <div class="ui grid stackable">
			  <div class="three wide column">
				  <div class="ui fluid blue vertical animated button" tabindex="4">
					  <div class="hidden content">Add Row</div>
					  <div class="visible content">
					   	<i class="plus icon"></i>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>