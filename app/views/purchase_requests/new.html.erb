<% content_for :title_page, "Purchase Request" %>
<% content_for :breadcrumb, "Inventory" %>
<% content_for :page_menu do %>
  <%= render 'purchase_requests/shared/form_action_links' %>
<% end %>
<% content_for :side_menu do %>
  <%= render 'purchase_requests/shared/side_navigations' %>
<% end %>

<div id="purchase">
	<form class="ui form">
		<div class="ui segment">
			<div class="ui stackable two column grid">
			  <div class="seven wide column left floated">
			  	<div class="field">
				    <label>PR No.</label>
				    <input type="text" name="pq-number" class="disabled field" placeholder="PQ Number">
				  </div>
				  <div class="field">
				    <label>Request To*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Branch</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Material Order No*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Material Order</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Request By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Approved By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
			  </div>
			  <div class="seven wide column right floated">
			  	<div class="field">
				    <label>PR Date *</label>
				    <input type="text" name="" class="disablePast" data-date-format="dd MM yyyy">
				  </div>
				  <div class="field">
				    <label>Delivery By *</label>
				    <input type="text" name="first-name" placeholder="First Name">
				  </div>
				  <div class="field">
				    <label>Notes *</label>
				    <textarea rows="5"></textarea>
				  </div>
			  </div>
			  <div class="six wide column centered">
				  <a class="ui fluid blue button">
						  Auto Generate By Purchase Request
					</a>	
				</div>
			</div>
		</div>
		<div class="ui segment">
			<table class="ui small single line table">
			  <thead>
			    <tr>
			      <th width="3%">No</th>
						<th width="90%">ITEM NAME</th>
						<th width="2%">QTY REQUESTED</th>
						<th width="2%">QTY APPROVED</th>
						<th width="2%">STOCK LEVEL</th>
						<th width="2%">UNIT</th>
						<th width="1%"> </th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td> 1 </td>
			      <td>
			      	<select class="ui fluid dropdown">
							  <option value=""></option>
							  <option value="1">Lorem Ipsum</option>
							  <option value="0">Lorem Ipsum</option>
							</select>
			      </td>
			      <td>
			      	<input type="text" name="" size="1">
			      </td>
			      <td>
			      	<input type="text" name="" size="1">
			      </td>
			      <td>
			      	<input type="text" name="" size="1">
			      </td>
			      <td>
			      	<input type="text" name="" size="1">
			      </td>
			      <td> <i class="large remove icon"></i></td>
			    </tr>
			  </tbody>
		  </table>
		  <div class="ui grid stackable">
			  <div class="three wide column">
				  <div class="ui fluid blue vertical animated button" tabindex="4">
					  <div class="hidden content">Add Row</div>
					  <div class="visible content">
					   	<i class="plus icon"></i>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
