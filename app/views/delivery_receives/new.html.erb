<% content_for :title_page, "Direct Receive" %>
<% content_for :breadcrumb, "Inventory" %>
<% content_for :page_menu do %>
  <%= render 'delivery_receives/shared/form_action_links' %>
<% end %>

<% content_for :side_menu do %>
  <%= render 'delivery_receives/shared/side_navigations' %>
<% end %>

<div id="purchase">
	<form class="ui form">
		<div class="ui segment">
			<div class="ui stackable two column grid">
			  <div class="seven wide column left floated">
			  	<div class="field">
				    <label>Received No.</label>
				    <input type="text" name="pq-number" class="disabled field" placeholder="PQ Number">
				  </div>
				  <div class="field">
				    <label>Delivery No. *</label>
				    <select class="ui dropdown">
						  <option value="">Material Transfer</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Checker*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Travel Pass</label>
				    <input type="text" name="pq-number" placeholder="PQ Number">
				  </div>
			  </div>
			  <div class="seven wide column right floated">
			  	<div class="field">
				    <label>Receive Date</label>
				    <input type="text" class="disablePast" data-date-format="dd MM yyyy">
				  </div>
				  <div class="field">
				    <label>Sender</label>
				    <input type="text" name="first-name" placeholder="First Name">
				  </div>
				  <div class="field">
				    <label>Received By*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Approved by*</label>
				    <select class="ui dropdown">
						  <option value="">Choose Name</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Notes</label>
				    <textarea rows="3"></textarea>
				  </div>
			  </div>
			  <div class="seven wide column centered">
				  <a class="ui fluid blue button">
						  Auto Generate By Purchase Request
					</a>	
				</div>
			</div>
		</div>
		<div class="ui segment">
			<table class="ui small single line table">
			  <thead>
			    <tr>
			      <th width="3%">No</th>
						<th width="20%">ITEM NAME</th>
						<th width="15%">QTY RECEIVED</th>
						<th width="10%">QTY ON DO</th>
						<th width="20%">UNIT</th>
						<th width="10%">PRICE</th>
						<th width="10%">NOTES</th>
						<th></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td></td>
			      <td></td>
			      <td></td>
			      <td></td>
			      <td></td>
			      <td></td>
			      <td></td>
			      <td></td>
			      <td><i class="large remove icon"></i></td>
			    </tr>
			  </tbody>
		  </table>
		  <div class="ui grid stackable">
			  <div class="three wide column">
				  <div class="ui fluid blue vertical animated button" tabindex="4">
					  <div class="hidden content">Add Row</div>
					  <div class="visible content">
					   	<i class="plus icon"></i>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
