<div id="purchase">
	<form class="ui form">
		<div class="ui segment">
			<div class="ui stackable two column grid">
			  <div class="seven wide column left floated">
			  	<div class="field">
				    <label>Direct Purchase No</label>
				    <input type="text" name="pq-number" class="disabled field" placeholder="PQ Number">
				  </div>
				  <div class="field">
				    <label>Notes</label>
				    <textarea rows="3"></textarea>
				  </div>
			  </div>
			  <div class="seven wide column right floated">
				  <div class="field">
				    <label>Purchase Date *</label>
				    <input type="text" class="disableFuture" data-date-format="dd MM yyyy">
				  </div>
			  	<div class="field">
				    <label>Requested By *</label>
				    <select class="ui dropdown">
						  <option value="">Choose PR</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
				  <div class="field">
				    <label>Approved By *</label>
				    <select class="ui dropdown">
						  <option value="">Choose One</option>
						  <option value="1">Lorem Ipsum</option>
						  <option value="0">Lorem Ipsum</option>
						</select>
				  </div>
			  </div>
			  <div class="six wide column centered">
				  <a class="ui fluid blue button">
						  Auto Generate By Purchase Request
					</a>	
				</div>
			</div>
		</div>
	</form>
